@page
@model assignment4.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = $"{Model.Employee?.FirstName} {Model.Employee?.LastName}";
}

<h1>@ViewBag.Title</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HireDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Region)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HomePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HomePhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Extension)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Extension)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Notes)
        </dd>
        <dt class="col-sm-2">
            Reports To
        </dt>
        <dd class="col-sm-10">
            @if (Model.ReportsToEmployee != null)
            {
                <span>@Model.ReportsToEmployee.FirstName @Model.ReportsToEmployee.LastName</span>
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
        <dd class="col-sm-10">
            <div class="card" style="width: 18rem; border: none">
                <img src="~/images/employees/@Model.Employee?.PhotoPath" class="card-img-top" alt="Employee photo of @Model.Employee?.FirstName @Model.Employee?.LastName" width="360" height="300">
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee?.EmployeeId" class="btn btn-primary">Edit</a>
    <a asp-page="./Delete" asp-route-id="@Model.Employee?.EmployeeId" class="btn btn-danger">Delete</a>
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
