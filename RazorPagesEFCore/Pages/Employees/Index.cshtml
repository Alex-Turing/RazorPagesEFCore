@page
@model assignment4.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
}

<h1>@ViewBag.Title</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<div class="d-flex flex-wrap justify-content-start gap-3">
    @foreach (var employee in Model.Employee)
    {
        <a asp-page="./Details" asp-route-id="@employee.EmployeeId" class="text-decoration-none">
            <div class="card" style="width: 18rem;">
                <img src="~/images/employees/@employee.PhotoPath" class="card-img-top" alt="Employee photo of @employee.FirstName @employee.LastName" width="360" height="300">
                <div class="card-body text-center">
                    <h5 class="card-title">@employee.TitleOfCourtesy @employee.FirstName @employee.LastName</h5>
                    <h5 class="card-title">@employee.Title</h5>
                </div>
            </div>
        </a>
    }
</div>
